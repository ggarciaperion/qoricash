# ============================================
# QORICASH TRADING - CONFIGURACIÓN PRODUCCIÓN
# ============================================

# ========== FLASK ==========
FLASK_ENV=production
SECRET_KEY=GENERAR_CLAVE_SECRETA_SEGURA_AQUI_MIN_32_CARACTERES

# ========== DATABASE ==========
# PostgreSQL proporcionado por Render automáticamente
DATABASE_URL=${DATABASE_URL}

# ========== SESSION ==========
SESSION_COOKIE_SECURE=True
PERMANENT_SESSION_LIFETIME=43200

# ========== CLOUDINARY (ALMACENAMIENTO DE ARCHIVOS) ==========
# Crear cuenta gratuita en: https://cloudinary.com
CLOUDINARY_CLOUD_NAME=tu-cloud-name
CLOUDINARY_API_KEY=tu-api-key
CLOUDINARY_API_SECRET=tu-api-secret
CLOUDINARY_URL=cloudinary://tu-api-key:tu-api-secret@tu-cloud-name

# ========== EMAIL PRINCIPAL (NUEVAS OPERACIONES) ==========
# Gmail App Password: https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=operaciones@tuempresa.com
MAIL_PASSWORD=tu-app-password-gmail
MAIL_DEFAULT_SENDER=operaciones@tuempresa.com

# ========== EMAIL CONFIRMACIÓN (OPERACIONES COMPLETADAS) ==========
MAIL_CONFIRMATION_USERNAME=confirmaciones@tuempresa.com
MAIL_CONFIRMATION_PASSWORD=tu-app-password-gmail-confirmacion
MAIL_CONFIRMATION_SENDER=confirmaciones@tuempresa.com

# ========== RATE LIMITING ==========
RATELIMIT_ENABLED=True

# ========== LOGGING ==========
LOG_LEVEL=INFO

# ========== TIMEZONE ==========
TIMEZONE=America/Lima

# ========== SOCKETIO (OPCIONAL - Para múltiples workers) ==========
# Solo si usas múltiples workers en producción
# SOCKETIO_MESSAGE_QUEUE=redis://redis-url

# ========== PYTHON ==========
PYTHON_VERSION=3.11.6
