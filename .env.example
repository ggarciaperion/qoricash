# ========================================
# QORICASH TRADING V2 - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill with your values

# Flask
FLASK_APP=run.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here-generate-with-secrets-token-hex

# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Cloudinary (File Storage)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Timezone
TIMEZONE=America/Lima

# Session
SESSION_COOKIE_SECURE=True
PERMANENT_SESSION_LIFETIME=43200

# Rate Limiting
RATELIMIT_ENABLED=True

# Logging
LOG_LEVEL=INFO

# Email Configuration (Unified)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@domain.com
MAIL_MAX_EMAILS=None
MAIL_ASCII_ATTACHMENTS=False

# NubeFact API Configuration (Electronic Invoicing)
NUBEFACT_API_URL=https://api.nubefact.com/api/v1
NUBEFACT_TOKEN=your-nubefact-token-here
NUBEFACT_RUC=your-company-ruc
NUBEFACT_ENABLED=False

# Company Information (Emisor)
COMPANY_RUC=your-company-ruc
COMPANY_NAME=YOUR COMPANY NAME
COMPANY_ADDRESS=YOUR COMPANY ADDRESS
COMPANY_DISTRICT=YOUR DISTRICT
COMPANY_PROVINCE=YOUR PROVINCE
COMPANY_DEPARTMENT=YOUR DEPARTMENT
